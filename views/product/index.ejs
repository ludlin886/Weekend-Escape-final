<%- include('../bases/header', {title:"Product"}) %>
<link rel="stylesheet" href="/stylesheets/app1.css" />
<body>
  <dl class="pd" id="product-page">
    <% products.forEach((product) => { %>
    <dt><strong><%= product.name %></strong></dt>
    <dd><%= product.description %></dd>
    <dd><%= product.price %></dd>
    <div>
      <form
        method="POST"
        action="/product/<%= product._id %>/?_method=DELETE"
        onclick="return confirm('Are you sure you want to delete this record?')"
      >
        <button class="aps" type="submit">Delete</button>
      </form>
    </div>
    <% }); %>
  </dl>
</body>
